<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 font-sans p-4">
    <form method="POST" action="/register" class="w-full max-w-sm bg-white p-6 rounded-xl shadow-md space-y-4">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-6 mt-2 text-center">Register</h1>

        <input type="text" name="username" placeholder="Username" 
               class="w-full border p-2 rounded focus:outline-none focus:ring-2 focus:ring-red-500" required />

        <input type="password" name="password" placeholder="Password" 
               class="w-full border p-2 rounded focus:outline-none focus:ring-2 focus:ring-red-500" required />

        <input type="password" name="confirmPassword" placeholder="Confirm Password" 
               class="w-full border p-2 rounded focus:outline-none focus:ring-2 focus:ring-red-500" required />

        <div class="flex items-center space-x-2">
            <input type="checkbox" required id="terms-checkbox" 
                   class="h-4 w-4 text-red-600 border-gray-300 rounded focus:ring-red-500" />
            <label for="terms-checkbox" class="text-sm text-gray-700">
                I agree to the 
                <a href="/termsCondition" class="text-red-600 underline hover:text-red-700">terms and conditions</a>
            </label>
        </div>

        <button type="submit" 
                class="w-full bg-red-600 text-white p-2 rounded hover:bg-red-700 transition-colors">
            Register
        </button>

        <p class="text-center text-gray-500 text-sm">
            Already have an account? 
            <a href="/login" class="text-red-600 hover:text-red-700 underline">Login</a>
        </p>
    </form>
</div>

<%- include('partials/footer') %>
