<%- include('partials/header') %>
<%- include('partials/nav', { activePage: 'detail', isLoggedIn: isLoggedIn }) %>

<div class="min-h-screen bg-gray-100 flex flex-col items-center px-4 py-6 sm:px-6 lg:px-8">

    <!-- Page Heading -->
    <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-8 text-center">Car Details</h1>

    <!-- Car Info Container -->
    <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md w-full max-w-2xl relative flex flex-col sm:flex-row sm:items-start gap-4">

        <!-- Back to Main (visible only on small screens) -->
        <a href="/main"
           class="flex justify-center items-center mt-2 sm:mt-0 px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition duration-200 lg:hidden">
           ‚Üê Back to Main
        </a>

        <!-- Car Text Details -->
        <div class="flex-1">
            <h2 class="text-2xl sm:text-3xl font-semibold text-gray-700 mb-2"><%= car.Username %></h2>
            <p class="text-gray-600 text-sm sm:text-lg"><strong>Phone Number:</strong> <%= car.phonenumber || 'N/A' %></p>
            <p class="text-gray-600 text-sm sm:text-lg mb-1"><strong>Engine No:</strong> <%= car.car_no || 'N/A' %></p>
            <p class="text-gray-600 text-sm sm:text-lg mb-1"><strong>Last PUC Date:</strong> <%= car.lastPUC ? car.lastPUC.toISOString().split('T')[0] : 'N/A' %></p>
            <p class="text-gray-600 text-sm sm:text-lg mb-1"><strong>Next PUC Date:</strong> <%= car.nextPUC ? car.nextPUC.toISOString().split('T')[0] : 'N/A' %></p>
            <p class="text-gray-600 text-sm sm:text-lg mb-1"><strong>Last Insurance Date:</strong> <%= car.lastInsurance ? car.lastInsurance.toISOString().split('T')[0] : 'N/A' %></p>
            <p class="text-gray-600 text-sm sm:text-lg"><strong>Next Insurance Date:</strong> <%= car.nextInsurance ? car.nextInsurance.toISOString().split('T')[0] : 'N/A' %></p>
        </div>

        <!-- Car Image -->
        <% if (car.image) { %>
        <div class="mt-4 sm:mt-0 sm:ml-4 w-full sm:w-48 h-48 sm:h-48 flex-shrink-0">
            <img src="<%= car.image %>" alt="Car Image" class="w-full h-full object-contain rounded-lg shadow">
        </div>
        <% } %>

    </div>

</div>

<%- include('partials/footer') %>
